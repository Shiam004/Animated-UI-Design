<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.modern_ui_splash_animation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".header"></activity>
        <activity android:name=".walk" />
        <activity android:name=".car_book" />
        <activity android:name=".plane_book" />
        <activity android:name=".train_book" />
        <activity android:name=".ship_book" />
        <activity android:name=".bus_Booking" />
        <activity android:name=".OTP_Verification" />
        <activity android:name=".user_profile" />
        <activity android:name=".SignUp" />
        <activity android:name=".LogIn" />
        <activity android:name=".Dashboard" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>